<androidx.drawerlayout.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/menupincipal"
	android:orientation="vertical"
	android:fitsSystemWindows="true"
	tools:openDrawer="start"
	android:theme="@style/Theme.Design.Light.NoActionBar">
	<com.google.android.material.navigation.NavigationView
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:id="@+id/nav_view"
		app:headerLayout="@layout/header"
		android:theme="@style/navigationTheme"
		app:menu="@menu/main_menu"
		app:itemIconTint="@color/white"
		app:itemTextColor="@color/white"
		app:itemBackground="@drawable/drawer_background_selector"
		android:layout_gravity="start"
		android:background="@color/Fondo_menu">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:orientation="vertical"
			android:padding="16dp">

			<Button
				android:id="@+id/logout"
				android:layout_width="match_parent"
				android:layout_marginStart="5dp"
				android:layout_marginEnd="5dp"
				android:layout_height="42dp"
				android:layout_marginBottom="5dp"
				android:fontFamily="@font/poppinsmedium"
				android:gravity="center"
				android:background="@drawable/btnlogout"
				android:text="Cerrar sesión"
				android:textColor="@drawable/colortextobtnlogout"
				android:textSize="14sp"
				android:textAllCaps="false"/>
		</LinearLayout>
	</com.google.android.material.navigation.NavigationView>

	<RelativeLayout
		android:id="@+id/content_container"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" >


		<RelativeLayout
			android:id="@+id/page_balance_total_ek1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="0dp"
			android:layout_marginTop="0dp">


			<View
				android:id="@+id/rectangle_23_ek4"
				android:layout_width="match_parent"
				android:layout_height="460dp"
				android:layout_below="@+id/balance_total_ek3"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:layout_marginStart="10dp"
				android:layout_marginTop="20dp"
				android:layout_marginEnd="10dp"
				android:alpha="0.40000000596046"
				android:background="@drawable/cuadro_balance" />

			<RelativeLayout
				android:id="@+id/group_11"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="18dp"
				android:layout_marginTop="587dp" />


			<TextView
				android:id="@+id/balance_total_ek3"
				android:layout_width="match_parent"
				android:layout_height="34dp"
				android:layout_alignParentStart="true"
				android:layout_alignParentTop="true"
				android:layout_alignParentEnd="true"
				android:layout_marginStart="20dp"
				android:layout_marginLeft="133dp"
				android:layout_marginTop="86dp"
				android:layout_marginEnd="20dp"
				android:fontFamily="Roboto"
				android:gravity="left"
				android:text="Bienvenido"
				android:textColor="@color/purple_500"
				android:textSize="22dp" />


			<ImageView
				android:id="@+id/icon_bitcoin"
				android:layout_width="90sp"
				android:layout_height="90sp"
				android:layout_alignStart="@+id/rectangle_23_ek4"
				android:layout_alignTop="@+id/rectangle_23_ek4"
				android:layout_marginStart="5dp"
				android:layout_marginTop="29dp"
				android:src="@drawable/ic_bitcoin" />

			<TextView
				android:id="@+id/user_balance"
				android:layout_width="152dp"
				android:layout_height="wrap_content"
				android:layout_alignTop="@+id/rectangle_23_ek4"
				android:layout_alignParentEnd="true"
				android:layout_marginStart="16dp"
				android:layout_marginLeft="207dp"
				android:layout_marginTop="39dp"
				android:layout_marginEnd="10dp"
				android:layout_toEndOf="@+id/icon_bitcoin"
				android:fontFamily="@font/microsoftyaheibold"
				android:letterSpacing="0.1"
				android:text=""
				android:textColor="@color/ganancia_color"
				android:textSize="32sp" />

			<ImageView
				android:id="@+id/rec_balance"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/user_balance"
				android:layout_marginStart="16dp"
				android:layout_marginTop="2dp"
				android:layout_toEndOf="@+id/icon_bitcoin"
				android:src="@drawable/rec_balance" />


			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignStart="@+id/rec_balance"
				android:layout_alignTop="@+id/rec_balance"
				android:layout_alignEnd="@+id/rec_balance"
				android:layout_alignBottom="@+id/rec_balance"
				android:layout_marginStart="11dp"
				android:layout_marginTop="2dp"
				android:layout_marginEnd="9dp"
				android:layout_marginBottom="3dp"
				android:layout_toEndOf="@+id/icon_bitcoin"
				android:fontFamily="Roboto"
				android:gravity="center"
				android:letterSpacing="0.3"
				android:text="Balance"
				android:textColor="@color/white" />

			<ImageView
				android:id="@+id/profileimg"
				android:layout_width="25dp"
				android:layout_height="25dp"
				android:layout_alignParentTop="true"
				android:layout_alignParentEnd="true"
				android:layout_marginTop="10dp"
				android:layout_marginEnd="12dp"
				android:contentDescription="vector"
				android:src="@drawable/ic_portafolio" />

			<ImageView
				android:id="@+id/menu_icon"
				android:layout_width="27dp"
				android:layout_height="19dp"
				android:layout_alignParentTop="true"
				android:layout_marginStart="15dp"
				android:layout_marginTop="15dp"
				android:fontFamily="Darker Grotesque"
				android:src="@drawable/ic_menuimg"
				android:textColor="@color/name_color"
				android:textSize="18sp"
				android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

			<TextView
				android:id="@+id/name_ek1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:layout_marginStart="120dp"
				android:layout_marginTop="12dp"
				android:layout_marginEnd="120dp"
				android:fontFamily="Darker Grotesque"
				android:gravity="center"
				android:text="@string/name_ek1_string"
				android:textColor="@color/name_color"
				android:textSize="18sp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<ImageView
				android:id="@+id/flecha_aumento"
				android:layout_width="15dp"
				android:layout_height="15dp"
				android:layout_below="@+id/rec_balance"
				android:layout_marginStart="10dp"
				android:layout_marginTop="10dp"
				android:layout_toEndOf="@+id/icon_bitcoin"
				android:src="@drawable/flecha_arriba" />

			<ImageView
				android:id="@+id/flecha_perdida"
				android:layout_width="15dp"
				android:layout_height="15dp"
				android:layout_below="@+id/rec_balance"
				android:layout_marginStart="10dp"
				android:layout_marginTop="10dp"
				android:layout_toEndOf="@+id/icon_bitcoin"
				android:src="@drawable/flecha_abajo" />

			<TextView
				android:id="@+id/txtGanancia"
				android:layout_width="match_parent"
				android:layout_height="20dp"
				android:layout_below="@+id/rec_balance"
				android:layout_alignParentEnd="true"
				android:layout_marginStart="5dp"
				android:layout_marginTop="9dp"
				android:layout_marginEnd="10dp"
				android:layout_toEndOf="@+id/flecha_aumento"
				android:fontFamily="Roboto"
				android:gravity="left"
				android:letterSpacing="0.1"
				android:text=""
				android:textSize="14dp" />


			<org.eazegraph.lib.charts.BarChart
				android:id="@+id/barGraph"
				android:layout_width="match_parent"
				android:layout_height="250dp"
				android:layout_below="@+id/txtGanancia"
				android:layout_marginStart="30dp"
				android:layout_marginTop="36dp"
				android:layout_marginEnd="30dp"
				android:padding="10dp"
				app:egBarWidth="25dp"
				app:egEnableScroll="true"
				app:egFixedBarWidth="true"
				app:egLegendColor="@color/white"
				app:egLegendHeight="40dp"
				app:egLegendTextSize="10dp"
				app:egShowDecimal="true"
				app:egShowValues="true">

			</org.eazegraph.lib.charts.BarChart>

			<TextView
				android:id="@+id/txtsemanas"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/barGraph"
				android:layout_marginStart="10dp"
				android:layout_marginTop="0dp"
				android:layout_marginEnd="10dp"
				android:fontFamily="@font/chinese_msyh"
				android:gravity="center"
				android:text="Semanas"
				android:textColor="@color/purple_500"
				android:textSize="13dp" />

		</RelativeLayout>

		<TextView
			android:id="@+id/new_saving"
			android:layout_width="match_parent"
			android:layout_height="42dp"
			android:layout_alignParentBottom="true"
			android:layout_marginStart="10dp"
			android:layout_marginEnd="10dp"
			android:layout_marginBottom="10dp"
			android:background="@drawable/_rectangle_20_shape"
			android:fontFamily="@font/poppinsmedium"
			android:gravity="center"
			android:text="Nueva inversión"
			android:textColor="@color/white"
			android:textSize="20sp" />
	</RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>