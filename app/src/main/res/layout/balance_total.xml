						android:layout_marginBottom="4dp"
						android:fontFamily="@font/chinese_msyh"
						android:text="2"
						android:textSize="12dp"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toStartOf="@+id/txt1" />

					<View
						android:id="@+id/grafica2"
						android:layout_width="35dp"
						android:layout_height="100dp"
						android:layout_marginStart="24dp"
						android:layout_marginBottom="3dp"
						android:background="@drawable/grafica_disable"
						app:layout_constraintBottom_toTopOf="@+id/txt2"
						app:layout_constraintStart_toEndOf="@+id/grafica1" />

					<TextView
						android:id="@+id/txt3"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="60dp"
						android:layout_marginBottom="4dp"
						android:fontFamily="@font/chinese_msyh"
						android:text="3"
						android:textSize="12dp"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toStartOf="@+id/txt2" />


					<View
						android:id="@+id/grafica3"
						android:layout_width="35dp"
						android:layout_height="130dp"
						android:layout_marginStart="24dp"
						android:layout_marginBottom="3dp"
						android:background="@drawable/grafica_disable"
						app:layout_constraintBottom_toTopOf="@+id/txt3"
						app:layout_constraintStart_toEndOf="@+id/grafica2" />

					<TextView
						android:id="@+id/txt4"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="56dp"
						android:layout_marginBottom="4dp"
						android:fontFamily="@font/chinese_msyh"
						android:text="4"
						android:textSize="12dp"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toStartOf="@+id/txt3" />

					<View
						android:id="@+id/grafica4"
						android:layout_width="35dp"
						android:layout_height="140dp"
						android:layout_marginBottom="3dp"
						android:layout_marginStart="24dp"
						android:background="@drawable/grafica_disable"
						app:layout_constraintBottom_toTopOf="@+id/txt4"
						app:layout_constraintStart_toEndOf="@+id/grafica3" />

					<TextView
						android:id="@+id/txt5"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="60dp"
						android:layout_marginBottom="4dp"
						android:fontFamily="@font/chinese_msyh"
						android:text="5"
						android:textSize="12dp"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toStartOf="@+id/txt4" />

					<View
						android:id="@+id/grafica5"
						android:layout_width="35dp"
						android:layout_height="150dp"
						android:layout_marginStart="24dp"
						android:layout_marginBottom="3dp"
						android:background="@drawable/grafica_disable"
						app:layout_constraintBottom_toTopOf="@+id/txt5"
						app:layout_constraintStart_toEndOf="@+id/grafica4" />

					<TextView
						android:id="@+id/txt6"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="60dp"
						android:layout_marginBottom="4dp"
						android:fontFamily="@font/chinese_msyh"
						android:text="6"
						android:textSize="12dp"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintStart_toStartOf="@+id/txt5" />

					<View
						android:id="@+id/grafica6"
						android:layout_width="35dp"
						android:layout_height="90dp"
						android:layout_marginStart="24dp"
						android:layout_marginBottom="3dp"
						android:background="@drawable/grafica_disable"
						app:layout_constraintBottom_toTopOf="@+id/txt6"
						app:layout_constraintStart_toEndOf="@+id/grafica5" />

					<TextView
						android:id="@+id/txt7"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="60dp"
						android:layout_marginBottom="4dp"
