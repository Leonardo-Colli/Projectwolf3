				android:layout_height="wrap_content"
				android:layout_alignParentStart="true"
				android:layout_alignParentEnd="true"
				android:layout_marginStart="120dp"
				android:layout_marginTop="12dp"
				android:layout_marginEnd="120dp"
				android:fontFamily="Darker Grotesque"
				android:gravity="center"
				android:text="@string/name_ek1_string"
				android:textColor="@color/name_color"
				android:textSize="18sp"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<ImageView
				android:id="@+id/flecha_aumento"
				android:layout_width="15dp"
				android:layout_height="15dp"
				android:layout_below="@+id/rec_balance"
				android:layout_marginStart="10dp"
				android:layout_marginTop="10dp"
				android:layout_toEndOf="@+id/icon_bitcoin"
				android:src="@drawable/flecha_arriba" />

			<ImageView
				android:id="@+id/flecha_perdida"
				android:layout_width="15dp"
				android:layout_height="15dp"
